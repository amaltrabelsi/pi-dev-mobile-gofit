{% extends 'base-front.html.twig' %}

{% block body %}
<!-- Offcanvas Overlay -->
<div class="offcanvas-overlay" xmlns="http://www.w3.org/1999/html"></div>

<!-- ...:::: Start Breadcrumb Section:::... -->
<div class="breadcrumb-section breadcrumb-bg-color--golden">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h3 class="breadcrumb-title">Terrain</h3>
                    <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--golden">
                        <nav aria-label="breadcrumb">
                            <ul>
                                <li><a href="">Acceuil</a></li>
                                <li><a href="">Terrain</a></li>
                                <li class="" aria-current="page">Voir les details </li>
                            </ul>
                        </nav>
                    </div> <!-- ...:::: End Breadcrumb Section:::... -->


    <div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">
        <style>
            .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        </style>

        <div class="example-wrapper">
            <div class="card mb-6" style="max-width:700px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{ asset('uploads/images/' ~ detail.image) }}" alt="" width="180px" height="180px" class="img-fluid rounded-start" alt="image" />

                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Réference:  {{ detail.terrainId }}</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Nom du Terrain:  {{ detail.nomTerrain }}</li>
                                <li class="list-group-item">Prix: {{ detail.prix }} DT</li>
                                <li class="list-group-item">Région: {{ detail.region }}</li>
                                <li class="list-group-item">Activité: {{ detail.activitie }}</li>
                                <li class="list-group-item">Description: {{ detail.description}}</li>
                                <li class="list-group-item">Contatct: {{ detail.contact}}</li>
                            </ul>

                        </div>
                        <p> <a class="btn btn-primary" href="{{path('terrainacc') }}" role="button">Retour</a></p>
                    </div>
                </div>
            </div>




</div>
    </div>
                </div>
            </div>
        </div>

        </div>
    </div>
{% endblock %}
